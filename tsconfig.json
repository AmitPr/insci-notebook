{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "strict": true,
        "declaration": true,
        "allowJs": true,
        "outDir": "./dist/",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "lib":["es2015", "dom"],
        "experimentalDecorators": true
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}